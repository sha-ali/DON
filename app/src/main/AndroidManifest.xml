<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dontimer">

    <application
        android:allowBackup="true"
        android:icon="@drawable/timer"
        android:label="@string/app_name"
        android:roundIcon="@drawable/timer"
        android:supportsRtl="true"
        android:theme="@style/FullscreenActionBarStyle">
        <activity
            android:name=".TImer"
            android:label="stopwatch"
            android:theme="@style/FullscreenActionBarStyle"
            />
        <activity android:name=".Counter"
            android:label="counter"
            android:theme="@style/FullscreenActionBarStyle"
            />
        <activity android:name=".FullscreenActivity"
            android:label="dtime"
            android:theme="@style/FullscreenActionBarStyle"
            />
        <activity
            android:name=".Homactivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenActionBarStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>