<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".FullscreenActivity">

    <TextView
        android:id="@+id/texteventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="371dp"
        android:background="@color/colorPrimaryDark"
        android:text="Welcome to the show"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/texthour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="53dp"
        android:background="@color/colorPrimaryDark"
        android:text="1200"
        android:textColor="@color/colorAccent"
        android:textSize="130dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textminuts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texthour"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="130dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="59"
        android:textColor="@color/colorAccent"
        android:textSize="130dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textsecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textminuts"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="131dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="130dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="59"
        android:textColor="@color/colorAccent"
        android:textSize="130dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttoneventcounterstart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="39dp"
        android:text="+"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:layout_marginRight="39dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/button" />

    <Button
        android:id="@+id/buttoncancelevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginBottom="61dp"
        android:background="@drawable/button"
        android:text="cancel"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp" />

    <Button
        android:id="@+id/kattabomma"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="314dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="132dp"
        android:background="@mipmap/ic_timer_round"
        android:backgroundTintMode="src_in"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp" />

    <Button
        android:id="@+id/rajaravivarmma"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="316dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="206dp"
        android:background="@mipmap/ic_count_round"
        android:backgroundTintMode="src_in"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp" />
</RelativeLayout>